<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="330dp"
    android:minHeight="330dp"
    android:minWidth="190dp"
    android:layout_gravity="bottom|end"
    tools:context=".view.WalletActivity"
    android:id="@+id/add_fragment"
    android:background="@android:color/transparent"
    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_expense_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="120dp"
        android:backgroundTint="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_white_24dp"
        android:elevation="12dp"
        app:elevation="12dp"
        app:borderWidth="0dp"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Add expense"
        android:textColor="@android:color/black"
        android:gravity="center"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_income_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="120dp"
        android:backgroundTint="@color/green"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_white_24dp"
        android:elevation="12dp"
        app:elevation="12dp"
        app:borderWidth="0dp"
        app:backgroundTint="@color/green" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="Add income"
        android:textColor="@android:color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="120dp"
        app:borderWidth="0dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@color/white"
        android:backgroundTint="@color/yellow" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Delete Data"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:textColor="@android:color/black"
        android:elevation="12dp"
        app:elevation="12dp"
        app:borderWidth="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cancel_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="120dp"
        android:tint="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_cancel_black_24dp"
        android:elevation="12dp"
        app:elevation="12dp"
        app:borderWidth="0dp"
        app:backgroundTint="@color/white"
        app:maxImageSize="65dp"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@android:color/black" />


</RelativeLayout>